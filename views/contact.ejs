<body>

    <div class="container">
        <div class="row">
           <div class="col align-self-center ml-auto header-col-mid">
              <!--mainmenu logo-->
              <div class="menulogo_container">
                 <img class="mainmenu_logo" src="./images/logo_smg.png" alt="logo" />
              </div>
              <!-- mainmenu begin -->
